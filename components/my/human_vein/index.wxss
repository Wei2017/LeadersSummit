
.container{
  width: 702rpx;
  height: 200rpx;
  font-size: 0;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  margin: 0 auto;
  border-radius: 4px;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-right: 24rpx;
}
.card_cover_info{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding-left: 25rpx;
}
/* 用户头像 */
.user_pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
/* 用户基本信息 */
.basic_info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.user_name{
  font-size: 30rpx;
  color: #2e2e2e;
}
.company{
  font-size: 22rpx;
  color: #aaa;
  margin: 5rpx 0 10rpx;
}
.position{
  font-size: 24rpx;
  color: #aaa;
}
.agree{
  width: 142rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #ecb700;
  border-radius: 2px;
}
.audit{
  font-size: 30rpx;
  color: #bdbdbd;
}