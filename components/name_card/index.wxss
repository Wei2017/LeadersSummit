.container{
  font-size: 0
}
.user_name_pic{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.name_pic{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  z-index: 9999;
  padding-left: 24rpx;
}
.name_pic>text{
  font-size: 34rpx;
  color: #2e2e2e;
  margin-top: 17rpx;
  padding-left: 24rpx;
}
.name_pic .apply_show{
  font-size: 24rpx;
  color: #aaa;
}
.name_pic image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border:3px solid #fff;
}
/* 编辑资料 */
.edit_data{
  height: 76rpx;
  line-height: 76rpx;
  background-color: #ecb700;
  width: 100%;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.edit_data text{
  font-size: 24rpx;
  color: #fff;
  padding-right: 24rpx;  
}
.edit_data image{
  width: 24rpx;
  height: 26rpx;
}

/* 基本信息 */
.basic_info{
  display: flex;
  flex-direction: column;
  padding-left: 48rpx;
  margin-top: 57rpx;
}
.basic_info>view{
  margin-bottom: 40rpx;
}
.basic_info text{
  font-size: 28rpx;
  color: #2e2e2e;
}
.basic_info .title{
  font-size: 28rpx;
  color: #aaa;
  display: inline-block;
  width: 70rpx;
  margin-right: 46rpx;
}
.basic_info .phone_num{
  font-size: 34rpx;
  color: #ecb700;
}