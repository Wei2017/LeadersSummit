.lijob {
  height: 76rpx;
  line-height: 38rpx;
  font-size: 22rpx;
  text-align: center;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.container {
  margin-top: 59rpx;
  display: flex;
  flex-direction: column;
  width: 250rpx;
  height: 374rpx;
  font-size: 0;
}

.pic {
  text-align: center;
  position: relative;
}

.pic image {
  width: 191rpx;
  height: 191rpx;
  border-radius: 50%;
}

.pic text {
  width: 142rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -71rpx;
}

.pic .consult_yes {
  background-color: #eaeaea;
  color: #aaa;
}

.pic .consult_not {
  background-color: #ecb700;
  color: #fff;
}

.guest_name {
  margin: 30rpx 0;
}

.guest_info text {
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  display: block;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
