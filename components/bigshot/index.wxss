.container{
  padding: 0 24rpx 20rpx;
}
.info{
  width: 678rpx;
  height: 244rpx;
  background-color: #fff;
  padding: 0rpx 0 0 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 4px;
  border: 1px solid #d5d5d5;
  position: relative;
}
.info::after{
  content: '';
  position: absolute;
  left: 0;
  top: 58.5%;
  width: 100%;
  height: 1px;
  background-color: #d5d5d5;
  z-index: 1;
}
.pic{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
  
}
.pic image{
  width: 176rpx;
  height: 176rpx;
  border-radius: 50%;
  border: 3px solid #ecb700;
}
.pic .ingImg{
  border: 3px solid #aaa;
}
.appointment_state{
  width: 124rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 22rpx;
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  bottom: 0;
  text-align: center;
}
.appointment_state.not{
background-color: #ecb700;
}
.appointment_state.ing{
  background-color: #aaa;
}

.introduce{
  display: flex;
  flex-direction: column;
  margin-left: 19rpx;
  width: 100%;
}
.name{
  font-size: 34rpx;
  color: #2e2e2e;
}
.shanchang{
  font-size: 28rpx;
  color: #2e2e2e;
  margin-top: 8rpx;
  padding-bottom: 10rpx;
}
.company{
  font-size: 24rpx;
  color: #aaa;
  margin-top: 15rpx;
}