.header {
    margin: 90rpx 0 40rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.content view{
  font-size: 38rpx;
}
.content text {
    color: #9d9d9d;
    margin-top: 40rpx;
    font-size: 32rpx;
}

.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
