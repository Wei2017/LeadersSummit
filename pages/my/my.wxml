<view class='container'>
  <view class='name_pic'>
    <image class='bj' src='/images/my/bj.png'></image>
    <image class='pic' src='{{pic}}'></image>
  </view>
  <view class='name' bindtap='editInfo'>
    <text>{{nickName}}</text>
    <image class='edit' src='/images/my/edit.png'></image>
  </view>
  <view class='section'>
    <view class='list_item' bindtap='toTicket'>
      <view class='item_text'>
        <image class='menpiao' src='/images/my/menpiao.png'></image>
        <text>峰会门票</text>
      </view>
      <image class='right_icon' src='/images/my/right.png'></image>
    </view>
    <view class='list_item' bindtap='toRenmai'>
      <view class='item_text'>
        <image class='renmai' src='/images/my/renmai.png'></image>
        <text class="{{rmState?'active':''}}">我的人脉</text>
      </view>
      <image class='right_icon' src='/images/my/right.png'></image>
    </view>
    <view class='list_item' bindtap='toYuyue'>
      <view class='item_text'>
        <image class='yuyue' src='/images/my/yuyue.png'></image>
        <text>我的预约</text>
      </view>
      <image class='right_icon' src='/images/my/right.png'></image>
    </view>
    <view class='list_item' bindtap='toMessage'>
      <view class='item_text'>
        <image class='lyb' src='/images/my/liuyanban@2x.png'></image>
        <text>留言板</text>
      </view>
      <image class='right_icon' src='/images/my/right.png'></image>
    </view>
    <!-- <view class='list_item' bindtap='toWap'>
      <view class='item_text'>
        <image class='lyb' src='/images/my/liuyanban@2x.png'></image>
        <text>跳转wap</text>
      </view>
      <image class='right_icon' src='/images/my/right.png'></image>
    </view> -->
  </view>
</view>