  width: 575rpx;
  height: 98rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #fff;
  vertical-align: middle;
  
}
.pickers{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
   padding-right: 84rpx;
   box-sizing: border-box;
  text-align: right;
  color: #fff;
  position: relative;
}
.pickers::after{
  content: '';
position: absolute;
top: 50%;
right: 27rpx;
width: 0;
height: 0;
margin-top: -3rpx;
border-top: 10rpx solid #fff;
border-left: 10rpx solid transparent;
border-right: 10rpx solid transparent;
}

.hidden{
  display: none;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}